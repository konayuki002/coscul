<h1>Show Item</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @item.name %>

    <strong>Stack:</strong>
    <%= @item.stack %>

    <strong>Is liquid:</strong>
    <%= @item.is_liquid %>

